{
  "name": "@kong-ui/core",
  "version": "0.3.3",
  "type": "module",
  "main": "./dist/core.umd.js",
  "module": "./dist/core.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/core.es.js",
      "require": "./dist/core.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "dev": "cross-env USE_SANDBOX=true vite",
    "build": "run-s typecheck build:package build:types",
    "build:package": "vite build",
    "build:types": "vue-tsc -p './tsconfig.build.json' --emitDeclarationOnly",
    "preview:package": "vite preview --port 4173",
    "preview": "cross-env USE_SANDBOX=true run-s build:package preview:package",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,vue}' --ignore-path '../../.eslintignore'",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx,vue}' --ignore-path '../../.eslintignore' --fix",
    "typecheck": "vue-tsc -p './tsconfig.build.json' --noEmit",
    "test:unit": "cross-env FORCE_COLOR=1 vitest run",
    "test:unit:open": "cross-env FORCE_COLOR=1 vitest --ui"
  },
  "repository": "https://github.com/Kong/kong-ui-shared-components/tree/main/packages/core",
  "author": "Kong, Inc.",
  "license": "UNLICENSED",
  "volta": {
    "extends": "../../package.json"
  },
  "peerDependencies": {
    "vue": "^3.2.44"
  },
  "dependencies": {
    "flat": "^5.0.2"
  }
}
