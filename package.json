{
  "name": "@kong/ui-shared-components",
  "version": "0.0.0-development",
  "private": true,
  "bin": {
    "kongui": "./packages/cli/bin/index.js"
  },
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 pnpm -r run build",
    "build:visualize": "cross-env FORCE_COLOR=1 pnpm -r run build:visualize",
    "lint": "cross-env FORCE_COLOR=1 pnpm -r run lint",
    "lint:fix": "cross-env FORCE_COLOR=1 pnpm -r run lint:fix",
    "typecheck": "cross-env FORCE_COLOR=1 pnpm -r run typecheck",
    "test:component": "BABEL_ENV=cypress pnpm -r run test:component",
    "test:component:open": "BABEL_ENV=cypress cypress open --component -b chrome",
    "test:component:ci": "BABEL_ENV=cypress cypress run --component -b chrome",
    "test:unit": "cross-env FORCE_COLOR=1 pnpm -r run test:unit",
    "test:unit:open": "cross-env FORCE_COLOR=1 pnpm -r run test:unit:open",
    "commit": "cz",
    "create-package": "pnpm --filter \"@kong-ui/cli\" run create-package"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@datadog/datadog-ci": "^1.17.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.4.2",
    "@evilmartians/lefthook": "^1.1.4",
    "@kong/kongponents": "^8.2.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/flat": "^5.0.2",
    "@types/inquirer": "^9.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^16.18.3",
    "@types/node-emoji": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitest/ui": "^0.24.5",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.1",
    "@vue/tsconfig": "^0.1.3",
    "boxen": "^7.0.0",
    "c8": "^7.12.0",
    "commitizen": "^4.2.5",
    "conventional-changelog-metahub": "^4.0.1",
    "cross-env": "^7.0.3",
    "cypress": "^10.11.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.7.0",
    "inquirer": "^9.1.4",
    "js-yaml": "^4.1.0",
    "jsdom": "^20.0.2",
    "lerna": "^6.0.1",
    "nanospinner": "^1.1.0",
    "netlify-cli": "^12.0.11",
    "node-emoji": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.18",
    "postcss-custom-properties": "^12.1.10",
    "rimraf": "^3.0.2",
    "sass": "^1.56.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "~4.8.4",
    "vite": "^3.2.2",
    "vite-plugin-externals": "^0.5.1",
    "vitest": "^0.24.5",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.9"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/kong-ui-shared-components"
  },
  "license": "UNLICENSED",
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  },
  "engines": {
    "node": ">=v16.18.0"
  },
  "volta": {
    "node": "16.18.0"
  }
}
