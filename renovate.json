{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeRequireAllStatusChecks",
    ":automergePatch",
    ":automergeMinor"
  ],
  "rangeStrategy": "bump",
  "platformAutomerge": true,
  "ignorePaths": [
    "packages/cli/src/__template__/package.json"
  ],
  "labels": [
    "dependencies",
    "renovate-bot"
  ],
  "schedule": [
    "every weekday"
  ],
  "automergeSchedule": [
    "every weekday"
  ]
}
